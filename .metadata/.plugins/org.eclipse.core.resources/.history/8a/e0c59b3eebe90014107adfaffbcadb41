var buttonView = Ti.UI.createView({
	title: "Firefly",
	backgroundColor: "#333",
	height: 50,
	width: "90%",
	bottom: "50%"
});

var galleryButton = Ti.UI.createLabel({
	textid: "Firefly",
	text: "Open Gallery",
	backgroundColor: "#333",
	color: "#fff",
	height: 50,
	borderRadius: 10,
	font: {fontSize: 12, fontFamily: "Arial"},
	textAlign: "center"
});

var getDetail = function(dataSource){
	var detailWindow = Ti.UI.createWindow({
		backgroundColor: "#808080"
	});
	var detailTitleView = Ti.UI.createView({
		height: 65,
		backgroundColor: "#fff",
		top: 0
	});
	var detailBorder = Ti.UI.createView({
		backgroundColor: "#dbdbdb",
		height: 1,
		top: detailTitleView.height + detailTitleView.top
	});
	var detailTitleLabel = Ti.UI.createLabel({
		//This might be changed
		text: dataSource.textid,
		font: {fontSize: 20, fontFamily: "Arial", fontWeight: "bold"},
		top: 30,
		width: "100%",
		textAlign: "center"
	});
	var closeButton = Ti.UI.createLabel({
		text: "Close Window",
		backgroundColor: "#333",
		color: "#fff",
		height: 50,
		font: {fontSize: 12, fontFamily: "Arial"},
		width: "100%",
		bottom: 0,
		textAlign: "center"
	});
	var closeWindow = function(){
		detailWindow.close({transition: Ti.UI.iPhone.AnimationStyle.CURL_DOWN});
	};
	closeButton.addEventListener("click", closeWindow);
	detailTitleView.add(detailTitleLabel);
	detailWindow.add(detailTitleView, detailBorder, closeButton);
	detailWindow.open({transition: Ti.UI.iPhone.AnimationStyle.CURL_UP});
};
//buttonView.add(galleryButton);
galleryButton.addEventListener("click", function(event){
	getDetail(event.source);
});
mainWin.add(galleryButton);
