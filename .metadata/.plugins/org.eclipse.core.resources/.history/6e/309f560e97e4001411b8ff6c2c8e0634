// Create main window
var mainWindow = Ti.UI.createWindow({
	//Assign a background color
	backgroundColor: "#dadada"
});

//Create a navigation window protocol
var navWindow = Ti.UI.iOS.createNavigationWindow({
	//Initialize mainWindow as the root level window
	window: mainWindow
});

var titleView = Ti.UI.createView({
	height: 65,
	backgroundColor: "#fff",
	top: 0
});

var border = Ti.UI.createView({
	backgroundColor: "#0000FF",
	height: 1,
	top: titleView.height+ titleView.top
});

var titleLabel = Ti.UI.createLabel({
	text: "StarCraft Leaders",
	font: {fontSize: 25, fontFamily: "Times New Roman", fontWeight: "bold"},
	top: 30,
	width: "100%",
	textAlight: "center"
});

var leaders = Ti.UI.createTableView({
	top: border.top + border.height,
	style: Ti.UI.iPHone.TableViewStyle.GROUPED
});

//Open the main window as a Navigation Window.
titleView.add(titleLabel);
mainWindow.add(titleView, border, leaders);
navWindow.open();
//Load the additional .js file StarCraft_Leaders.js
var loadFile = require("StarCraft_Leaders");
